<h2>Lista klientów</h2>
<table>
    <thead>
    <tr>
        <th>Mail</th>
        <th>Imię</th>
        <th>Data następnego kontaktu</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each clients}}
        <tr>
            <td><a href="mailto:{{this.mail}}" target="_blank">{{this.mail}}</a></td>
            <td><a href="/client/{{this.id}}">{{this.name}}</a></td>
            <td>{{this.nextContactAt}}</td>
            <td>
                <a href="/client/{{this.id}}">Szczegóły</a>
                <form method="delete" action="/client/{{this.id}}"><button type="submit">Usuń</button> </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
