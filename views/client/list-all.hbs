<h2>Lista klientów</h2>
<table>
    <thead>
    <tr>
        <th>Mail</th>
        <th>Imię</th>
        <th>Data następnego kontaktu</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each clients}}
        <tr>
            <td><a href="mailto:{{this.mail}}" target="_blank">{{this.mail}}</a></td>
            <td><a href="/client/{{this.id}}">{{this.name}}</a></td>
            <td>{{this.nextContactAt}}</td>
            <td>
                <a href="/client/{{this.id}}">Szczegóły</a>
                <form action="/client/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit">Usuń</button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<p>
<form action="/client/form/add">
    <button type="submit">Dodaj nowego klienta</button>
</form>
</p>